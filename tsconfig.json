{
    "compilerOptions": {
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "outDir": "./dist",
      "jsx": "react-jsx",
      "declaration": true,
      "esModuleInterop": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitAny": false,  
      "strictPropertyInitialization": false, 
      "noFallthroughCasesInSwitch": true,
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017"
    ]
  }